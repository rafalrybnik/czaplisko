# Database
DATABASE_URL="postgresql://user:password@localhost:5432/czaplisko?schema=public"

# Authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-32-character-minimum-secret-key-here"
ADMIN_EMAIL="admin@czaplisko.pl"
# Generate with: node -e "console.log(require('bcryptjs').hashSync('your-password', 12))"
ADMIN_PASSWORD_HASH="$2a$12$your-bcrypt-hash-here"

# Cloudflare R2
R2_ACCOUNT_ID="your-account-id"
R2_ACCESS_KEY_ID="your-access-key"
R2_SECRET_ACCESS_KEY="your-secret-key"
R2_BUCKET_PUBLIC="czaplisko-assets"
R2_BUCKET_PRIVATE="czaplisko-backups"
R2_PUBLIC_URL="https://your-r2-public-domain.com"
